
<div class="container-xl px-4" style="margin-top:90px; width:62%;">
    <nav class=" nav nav-borders">
        <a class="nav-link active ms-0" href="/users/profile" style="font-size: large; font-weight: 600;">Profile</a>
        <a class="nav-link" href="/users/address" style="font-size: large; font-weight: 600;">Address</a>
        <a class="nav-link" href="/users/password" style="font-size: large; font-weight: 600;">Password</a>
        <a class="nav-link"href="/users/wallet" style="font-size: large; font-weight: 600;">Wallet</a>


    </nav>
    <hr class="mt-0 mb-4">
    <div class="card mb-4">
        <div class="card-header">Password</div>
        <div class="card-body">
            <form action="/users/password" method="post" class="needs-validation" novalidate>
                <!-- Form Group (username)-->
                <!-- Form Row-->

                <!-- Form Group (first name)-->
                <div class="col-md-6">
                    <label class="small mb-1" for="currentPassword">Current Password</label>
                    <input class="form-control" id="oldPassword" name="password" type="password" required>
                </div>
                <!-- Form Group (last name)-->
                <div class="col-md-6">
                    <label class="small mb-1" for="newPassword">New Password</label>
                    <input class="form-control" id="newPassword" name="newPassword" type="password" required>
                    <span class="form-text small text-muted">
                        The password must be 8-20 characters, and must <em>not</em> contain spaces.
                    </span>
                </div>
                <!-- Form Row        -->

                <!-- Form Group (email address)-->

                <!-- Form Row-->
                <div class="row gx-3 mb-3">
                    <!-- Form Group (phone number)-->
                    <div class="col-md-6">
                        <label class="small mb-1" for="verifyPassword">Confirm Password</label>
                        <input class="form-control" id="confirmPassword" name="confirmPassword" type="password"
                            required>
                        <span class="form-text small text-muted">
                            To confirm, type the new password again.
                        </span>
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" id="id" name="_id" type="tel" value="{{user._id}}" hidden>
                    </div>
                </div>
                <!-- Save changes button-->
                <button class="btn btn-primary" type="submit">Save changes</button>
            </form>
        </div>
    </div>
</div>