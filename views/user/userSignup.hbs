<section class="vh-auto" style="background-color: #FDFBF8;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem; box-shadow: 4px 3px 8px 1px #969696;">
          <div class="row g-0">
